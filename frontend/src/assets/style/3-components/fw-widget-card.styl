
.fw-widget
    background: white;
    width: 18vh;
    height: 22rem;
    border-radius: 15px;
    text-align: center;
    padding: 1rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;

    &__time
        font-size: 1.5rem;
        font-weight: 600;

    &__content

        .content-img
            width: 5rem;

        h1
            font-size: 3rem;
        
        .cw-desc
            margin: 0;
            margin-top: -12px;

            h2
                font-size: 1.3rem;


    &__date
        line-height: 20px;

        .fw-day
            font-size: 24px;

        .fw-date
            font-size: 15px;