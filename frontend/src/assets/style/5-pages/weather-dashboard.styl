.w-board
    display: flex;
    width: 100%;
    justify-content: space-between;


    .info-container
        width: 30%

    .more-container
        width: 70%

    &__info
        width: 100%;

        .cw-section
            height: 36vw;

        .cw-widget
            height: 100%;
            width: 100%;

        .info-desc 
            margin-top: 1rem;
            height: 43%;


        .info-widget
            height: 5vw;
            width: 31vw;


    &__more
        padding: 2vw;
        width: 100%;

        .input-section
            height: 4vw;
            display: flex;
            position: relative;
            align-items: center;
            background: white;
            border-radius: 15px;
            margin-bottom: 1rem;

            input
                width: 100%;
                height: 4vw;
                border-radius: 1rem;
                padding: 1vw 1vw 1vw 4vw;

            i
                position: absolute;
                left: 2.5%;
                bottom: 1.3vw;
                font-size: 1.4vw;

        .fore-desc
            height: 30vw;

            &__header
                h4
                    color: primary;
                    font-size: 1.5vw;

                h1
                    font-weight: 600
                    font-size: 2vw;

            &__content
                display: flex;
                justify-content: space-between;
                width: 100%;
                margin: 0.5rem 0;

                .fore-section
                    display: flex;
                    justify-content: space-between;
                    width: 100%;


        .google-map
            width: 100%;
            border-radius: 15px;
            height: 26vw;
